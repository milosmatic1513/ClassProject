@model ClassProject.Models.pub_info

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>pub_info</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.logo)
        </dt>

        <dd>
            @{
                string imageSrc;
                if (Model.logo == null)
                {
                    imageSrc = "";
                }
                else
                {
                    var imageBase64 = Convert.ToBase64String(Model.logo);
                    imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                }
                <img src="@imageSrc" style="max-width: 250px; max-height: 250px; width: auto; height: auto;" alt="No Image" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pr_info)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pr_info)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.publisher.pub_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.publisher.pub_name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.Partial("../Shared/BackToList")
        </div>

        <input type="hidden" value="@ViewBag.ReferUrl" name="referUrl" />
    }
</div>
