@model ClassProject.Models.pub_info

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>pub_info</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.logo)
        </dt>

        <dd>
            @{
                var imageBase64 = Convert.ToBase64String(Model.logo);
                string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                <img src="@imageSrc" style="max-width: 250px; height: auto;"/>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pr_info)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pr_info)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.publisher.pub_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.publisher.pub_name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.pub_id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
